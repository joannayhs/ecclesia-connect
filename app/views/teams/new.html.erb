<%= form_for @team do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<br>
<%= f.label :description %><br>
<%= f.text_field :description %><br>
<br>
<%= f.label :roles %>
<%= fields_for :roles do |role| %>
<%= role.collection_check_boxes :team, :role_ids, Role.all, :id, :title%>
<% end %>
<%= f.submit "Add Team" %>
<%end %>