<h1>Login</h1>
<br>
<%= form_for :user, url: {controller: 'session', action: 'create'} do |f| %>
<%= f.label :email %><br>
<%= f.text_field :email %><br>
<br>
<%= f.label :password %><br>
<%= f.password_field :password %><br>
<br>
<%= f.submit "Login" %>
<%end%>

<%= link_to "Login with Facebook", '/auth/facebook'%>