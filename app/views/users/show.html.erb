
<h1>Welcome, <%= @user.name %></h1>

<h2>Upcoming Roles:</h2> 
<table>
<tr>
<th>Date</th>
<th>Arrival Time</th>
<th>Role</th> 
<th>Confirm</th>
</tr> 

<tr>
    <% @user.roles.each do |role| %>
    <td><%= role.arrival_time.strftime("%B %d, %Y") %></td>
    <td><%= role.arrival_time.strftime("%I:%M%p") %></td>
    <td><%= link_to role.title, role_path(role) %></td>
    <td><%= link_to "Confirm", edit_user_role_path(@user, role) %>
    <%end%>
    

<tr> 
</table> 
