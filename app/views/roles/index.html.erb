<div class="filter">
<h2>Filter Roles: </h2>
<%= form_tag('/roles', method: 'get')  do %>
<%= select_tag "Team",  options_from_collection_for_select(@teams, "id", "name"), include_blank: true%>
<%= select_tag "Availability", options_for_select(["Filled Roles", "Open Roles"]), include_blank: true %>
<%= submit_tag "Filter Roles" %>
<%end%>
</div>
<br>
<table>
<tr>
<th>Arrival Time</th>
<th>Title</th>
<th>Description</th>
<th>Available?</th>
</tr> 


<% @roles.each do |role| %>
<tr>
<td><%= role.arrival_time.strftime("%B %d, %Y at %I:%M%p") %>
<td><%= link_to role.title, role_path(role.id) %></td>
<td><%= role.description %></td>
<td><%= role.available? ? "Available" : "Unavailable" %>
</tr>
<% end %>
</table>
<br>
<%= link_to "Add Role", new_role_path%>
