<%= @role.arrival_time %><br>

<%= @role.title %><br>
<%= @role.description%><br>
<%= link_to @role.team.name, team_path(@role.team) %><br>
<% @role.users.each do |u| %>
<%= u.name %>
<%end %>

<%= form_tag(method: 'get') do %>
<%= select_tag "Users", options_from_collection_for_select(User.all, :id, :name), include_blank: true %>
<%= submit_tag "Select"%>
<% end%>

<% if @user %>
<%= assign_role %>
<% end %>


<%= link_to "Edit Role", edit_role_path(@role)%>
<%= button_to "Delete Role", role_path(@role), method: :delete %>
